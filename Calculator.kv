<CalculatorLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    TextInput:
        id: expression
        multiline: False
        font_size: 36
        size_hint_y: 0.18
        readonly: True
        background_color: 1,1,1,1
        foreground_color: 0,0,0,1
        halign: 'right'
        valign: 'middle'
        cursor_color: 0,0,0,0

    Label:
        id: result
        text: "Result"
        font_size: 24
        size_hint_y: 0.12
        halign: 'right'
        valign: 'middle'
        color: 0,0,0,1

    GridLayout:
        cols: 4
        spacing: 8
        size_hint_y: 0.7
        Button:
            text: 'C'
            font_size: 28
            background_color: 1,0.5,0.5,1
            on_press: root.clear_expression()
        Button:
            text: '('
            font_size: 28
            on_press: root.on_button_press('(')
        Button:
            text: ')'
            font_size: 28
            on_press: root.on_button_press(')')
        Button:
            text: '/'
            font_size: 28
            background_color: 0.8,0.8,1,1
            on_press: root.on_button_press('/')
        Button:
            text: '7'
            font_size: 28
            on_press: root.on_button_press('7')
        Button:
            text: '8'
            font_size: 28
            on_press: root.on_button_press('8')
        Button:
            text: '9'
            font_size: 28
            on_press: root.on_button_press('9')
        Button:
            text: '*'
            font_size: 28
            background_color: 0.8,0.8,1,1
            on_press: root.on_button_press('*')
        Button:
            text: '4'
            font_size: 28
            on_press: root.on_button_press('4')
        Button:
            text: '5'
            font_size: 28
            on_press: root.on_button_press('5')
        Button:
            text: '6'
            font_size: 28
            on_press: root.on_button_press('6')
        Button:
            text: '-'
            font_size: 28
            background_color: 0.8,0.8,1,1
            on_press: root.on_button_press('-')
        Button:
            text: '1'
            font_size: 28
            on_press: root.on_button_press('1')
        Button:
            text: '2'
            font_size: 28
            on_press: root.on_button_press('2')
        Button:
            text: '3'
            font_size: 28
            on_press: root.on_button_press('3')
        Button:
            text: '+'
            font_size: 28
            background_color: 0.8,0.8,1,1
            on_press: root.on_button_press('+')
        Button:
            text: '0'
            font_size: 28
            on_press: root.on_button_press('0')
        Button:
            text: '.'
            font_size: 28
            on_press: root.on_button_press('.')
        Button:
            text: '='
            font_size: 28
            background_color: 0.5,1,0.5,1
            on_press: root.calculate(expression.text)
        Button:
            text: 'sin'
            font_size: 24
            background_color: 0.9,0.9,0.9,1
            on_press: root.on_button_press('sin(')
        Button:
            text: 'cos'
            font_size: 24
            background_color: 0.9,0.9,0.9,1
            on_press: root.on_button_press('cos(')
        Button:
            text: 'tan'
            font_size: 24
            background_color: 0.9,0.9,0.9,1
            on_press: root.on_button_press('tan(')
        Widget:
            size_hint_x: None
            width: 0
